<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SachNoiTrucTuyen.Views.Pages.SupportPages.LoginPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:customViews="clr-namespace:SachNoiTrucTuyen.Views.CustomView"
    xmlns:prism="http://prismlibrary.com"
    xmlns:viewmodels="clr-namespace:SachNoiTrucTuyen.ViewModels"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    prism:ViewModelLocator.AutowireViewModel="True"
    x:DataType="viewmodels:LoginPageViewModel"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <Grid HeightRequest="55">
                <Frame
                    Padding="0"
                    CornerRadius="0"
                    HeightRequest="55">
                    <Grid>
                        <Image
                            Margin="15,10,15,10"
                            HeightRequest="20"
                            HorizontalOptions="Start"
                            Source="{xct:ImageResource Id=SachNoiTrucTuyen.Resources.Images.ic_down.png}"
                            VerticalOptions="Center"
                            WidthRequest="20">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Command="{prism:GoBack}" />
                            </Image.GestureRecognizers>
                        </Image>
                        <Label
                            FontFamily="R"
                            FontSize="16"
                            HorizontalOptions="Center"
                            Text="Đăng nhập"
                            TextColor="Black"
                            VerticalOptions="Center" />
                    </Grid>
                </Frame>
            </Grid>
            <StackLayout Margin="0,50,0,0">
                <Label
                    FontFamily="RBo"
                    FontSize="22"
                    HorizontalOptions="Center"
                    Text="ĐĂNG NHẬP"
                    TextColor="{StaticResource tabBarColor}" />

                <Frame
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="35,50,35,10"
                    Padding="0"
                    BackgroundColor="{StaticResource placeHolderColor}"
                    CornerRadius="40"
                    HasShadow="False">
                    <customViews:CustomEntry
                        x:Name="entryUserName"
                        Margin="20,3"
                        FontFamily="R"
                        Placeholder="Tên đăng nhập"
                        Text="{Binding Username}" />
                </Frame>

                <Frame
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="35,0,35,10"
                    Padding="0"
                    BackgroundColor="{StaticResource placeHolderColor}"
                    CornerRadius="40"
                    HasShadow="False">
                    <customViews:CustomEntry
                        x:Name="entryPass"
                        Margin="20,3"
                        FontFamily="R"
                        Placeholder="Mật khẩu"
                        Text="{Binding Password}" />
                </Frame>
            </StackLayout>
            <Frame
                x:Name="frbtnLogin"
                Grid.Row="3"
                Grid.Column="1"
                Margin="35,10,35,0"
                Padding="0"
                BackgroundColor="{StaticResource plpColor}"
                CornerRadius="40"
                HasShadow="False"
                HeightRequest="53"
                IsEnabled="{Binding IsEnabled}">
                <Label
                    Margin="20,3"
                    FontFamily="RBo"
                    FontSize="16"
                    HorizontalOptions="Center"
                    Text="Đăng nhập"
                    TextColor="{StaticResource disableButtonColor}"
                    VerticalOptions="Center">
                    <Label.Triggers>
                        <DataTrigger
                            Binding="{Binding Source={x:Reference frbtnLogin}, Path=IsEnabled}"
                            TargetType="Label"
                            Value="True">
                            <Setter Property="TextColor" Value="{StaticResource bgColor}" />
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Frame.Triggers>
                    <Trigger TargetType="Frame" Property="IsEnabled" Value="True">
                        <Setter Property="BackgroundColor" Value="{StaticResource primaryColor}" />
                    </Trigger>
                </Frame.Triggers>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LoginCommand}" />
                </Frame.GestureRecognizers>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>